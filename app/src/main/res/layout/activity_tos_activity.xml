<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_foreground_light"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <!-- Section 1: Intro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please read it before using the app"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="10dp" />

        <!-- Disclaimer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disclaimer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ChatNONET is provided by MCA Tech and operates entirely offline on your mobile device. While we strive to create a useful and engaging chatbot experience, we cannot guarantee the accuracy, completeness, or appropriateness of the responses generated by ChatNONET. The app may produce incorrect or offensive content. By using ChatNONET, you acknowledge that you do so at your own risk, and MCA Tech company are not liable for any damages arising from the use of this app."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Terms of Service Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="These Terms of Service ('ToS') govern your use of the ChatNONET app. By downloading or using ChatNONET, you agree to these terms."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Subsections -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Responsibilities"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users must not use ChatNONET for any unlawful purposes or in any way that could harm the app, its developer, or other users."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content Accuracy"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ChatNONET may generate content that is incorrect or offensive. Users are advised to use their own discretion when interacting with the app."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advertisements"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ChatNONET uses Google advertisements. By using the app, you agree to view these advertisements."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Usage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ChatNONET operates offline and does not share any data. However, the app's advertisements may collect data as per Google Ad policies. Users should review Google's privacy policy regarding ads."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limitation of Liability"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MCA Tech company are not liable for any direct, indirect, incidental, or consequential damages arising from the use of ChatNONET."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Termination"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We reserve the right to terminate access to ChatNONET for users who violate these ToS."
            android:textSize="14sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Button -->
        <Button
            android:id="@+id/acceptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textSize="16sp"
            android:backgroundTint="#003DFF"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
